{{#if message}}
    {{message}}
{{/if}}
<style>
        .dashboard{
                background-color:white;
                border-radius:30px;;
        }
        table {
                border-radius: 5px;
                margin-left: auto;
                margin-right: auto;
        }
        .display{
             border-radius: 10px;  
        }
</style>
<div class="container display">
  <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6 dashboard text-center">
                <h3>Dashboard</h3>
        <a href="/login">Admin Login</a> | <a href="/add">Send Enquiry</a> |    <a href="/display">Display Record</a>
        <br/>
        <br/>  
        <p >Record Found {{ users.length  }}</p>
        <div class="container ">
                <div class="row">
                        <table border="1">
                                <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Mobile</th>
                                        <th>Enquiry</th>
                                        <th>Action</th>
                                </tr>
        
                                {{!-- Record Found {{ users.length  }} --}}
                                {{#each users}}
                                <tr>

                                        <td>{{user_name}}</td>
                                        <td>{{user_email}}</td>
                                        <td>{{user_mobile}}</td>
                                        <td>{{user_enquiry}}</td>

                                        <td>
                                                <a href='edit/{{_id}}'>Edit</a> |    
                                        
                                                <a href='delete/{{_id}}'>Delete</a>
                                        </td>

                                </tr>

                                {{else}}

                                
                                        No  Found
                                
                                {{/each}}

                                </table>
                        </div>
</div>
<div class="col-sm-3"></div>

 